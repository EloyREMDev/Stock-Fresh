---
import AuthProtected from "../features/auth/AuthProtected.astro"
import SupplyList from "../features/stock/SupplyList.astro"
import CreateSupplyForm from "../features/stock/CreateSupplyForm.astro"
import Layout from "../layouts/Layout.astro"
import FormulaRegister from "../features/stock/FormulaRegister.astro"
---
<Layout title="App">
  <AuthProtected>
    <main class="flex-1 p-4 sm:p-6 lg:p-8">
        <div class="w-full mx-auto space-y-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[2fr,1fr] gap-8 items-start">
                <CreateSupplyForm />
                <FormulaRegister />
            </div> 
            <SupplyList />
        </div>
    </main>
  </AuthProtected>
</Layout>